<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TVMovieReviews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--enable window content transitions-->
        <item name="android:windowActivityTransitions">true</item>
        <!--Specify enter and exit transitions-->
        <item name="android:windowEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowExitTransition">@transition/change_image_transform</item>
        <!--Specify shared element transitions-->
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/holo_orange_dark</item>
        <!-- app icon colours, toolbar icons-->
        <item name="colorControlNormal">@color/black</item>
        <!--make status bar info dark, to be seen on a light background-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ShapeableImageViewGrid_LEFT" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <style name="ShapeableImageViewGrid_RIGHT" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
    </style>

    <!--shapeable image view configurations-->
    <style name="Book.ShapeableImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <style name="DetailBook.ShapeableImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <style name="rankOne.ShapeableImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomRight">60dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">60dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <style name="BottomNavigation" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>

    <!--Material design button-->
    <style name="materialDesignButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/materialButtonShapeAppearance</item>
    </style>

    <style name="materialButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>

</resources>